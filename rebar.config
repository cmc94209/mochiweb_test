{deps, []}.


{shell, [
    {apps, [mochiweb_test]},
    {config, "config/sys.config"}
]}.

{dist_node, [
    {sname, 'mochiweb_test'},
    {setcookie, 'mochiweb_test'}
]}.


{relx, [{release, {mochiweb_test, "0.1.0"},
         [mochiweb_test,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
